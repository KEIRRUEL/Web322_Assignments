<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="../index.js" />
    <link href="/css/main.css" rel="stylesheet" />
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="bg-primary text-white p-3">
      <div class="container">
        <nav class="nav justify-content-center">
          <a class="nav-link text-white" href="/">Home</a>
          <a class="nav-link text-white" href="/about">About</a>
          <a class="nav-link text-white" href="/articles">Articles</a>
          <a class="nav-link text-white" href="/categories">Categories</a>
          <a class="nav-link text-white" href="/articles/add">Add Article</a>
        </nav>
      </div>
    </header>
    <main class="container my-4">
      <div class="content p-4 bg-light">
        <h1>Articles</h2>
        <table class="table table-striped table-bordered">
          <thead class="thead-white">
            <tr>
              <% user.forEach(data=>{ %>
              <!-- starting a loop in here -->
              <!-- data to output while the loop is running -->
              <h2><%= data.title %></h2>
              <h3><%= data.content %></h3>
              <p>
                <strong>Category:</strong> <%= data.category %>
              </p>
              <p><strong>Author:</strong> <%= data.author %></p>
              <p><strong>Date:</strong> <%= data.date %></p>
              <br />
              <% }) %>
            </tr>
          </thead>
        </table>
      </div>
    </main>

